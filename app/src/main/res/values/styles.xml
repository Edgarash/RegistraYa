<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/amarante</item>

    </style>

    <style name="TemaLogin" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorForeground">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:colorPrimary">#FFFFFF</item>
        <item name="android:textColorPrimaryInverse">#FFFFFF</item>
        <item name="colorAccent">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
    </style>

    <style name="TemaFecha" parent="AppTheme">
        <item name="colorAccent">@color/nuevo2</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PruebaNegro" parent="AppTheme">
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="Barra" parent="AppTheme">
        <item name="colorAccent">@color/nuevo</item>
        <item name="android:textColorHint">@color/black</item>

    </style>

    <style name="Scroll_Restaurantes" parent="AppTheme">
        <item name="android:textColorPrimary">#000000</item>
    </style>

</resources>
