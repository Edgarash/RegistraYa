<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="13dp"
        android:layout_weight="1"
        android:paddingLeft="20dp">
        <TextView
            android:id="@+id/tvNombreRestaurante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Nombre de Restaurante" />

        <TextView
            android:id="@+id/tvColoniaRestaurante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colonia de Restaurante" />

        <TextView
            android:id="@+id/tvHorarioRestaurante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario del Restaurante" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:srcCompat="@android:drawable/ic_menu_send" />
</LinearLayout>