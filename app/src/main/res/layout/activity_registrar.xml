<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="mx.edu.itlp.registraya.RegistrarActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@drawable/tool4"
        android:minHeight="?attr/actionBarSize">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="RESERVA YA"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textColor="#fff"
                android:textSize="13pt"
                tools:fontFamily="@font/amarante" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Registro"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                    android:textColor="#062743"
                    android:textSize="13pt"
                    tools:fontFamily="@font/amarante" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_nombre"
                android:layout_width="365dp"
                android:layout_height="62dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_cliente"
                    android:layout_width="42dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/nombre"
                    android:src="@drawable/nombre" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:theme="@style/Barra">

                    <EditText
                        android:id="@+id/campo_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="12"
                        android:maxLength="60"
                        android:hint="@string/nombre_s"
                        android:inputType="text"
                        android:singleLine="false"
                        android:theme="@style/Barra" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_apellido"
                android:layout_width="365dp"
                android:layout_height="52dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/apellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="47dp"
                    android:theme="@style/Barra">

                    <EditText
                        android:id="@+id/campo_apellido"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:ems="12"
                        android:maxLength="60"
                        android:hint="@string/apellidos"
                        android:inputType="text"
                        android:singleLine="false"
                        android:theme="@style/Barra" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_correo"
                android:layout_width="365dp"
                android:layout_height="62dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_correo"
                    android:layout_width="42dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/email" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/correo"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:theme="@style/Barra">

                    <EditText
                        android:id="@+id/campo_correo"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="12"
                        android:maxLength="60"
                        android:hint="@string/prompt_email"
                        android:inputType="textEmailAddress"
                        android:singleLine="false"
                        android:theme="@style/Barra" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_contraseña"
                android:layout_width="365dp"
                android:layout_height="62dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_contraseña"
                    android:layout_width="42dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/contra" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/contraseña"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:theme="@style/Barra"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#113a5d">

                    <EditText
                        android:id="@+id/campo_contraseña"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="12"
                        android:maxLength="20"
                        android:hint="@string/contrase_a"
                        android:inputType="textPassword"
                        android:singleLine="false"
                        android:theme="@style/Barra" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_contraseña2"
                android:layout_width="365dp"
                android:layout_height="62dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/contraseña2"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="47dp"
                    android:layout_marginTop="5dp"
                    android:theme="@style/Barra"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#113a5d">

                    <EditText
                        android:id="@+id/campo_contraseña2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="12"
                        android:maxLength="20"
                        android:hint="Confirmar Contraseña"
                        android:inputType="textPassword"
                        android:singleLine="false"
                        android:theme="@style/Barra" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnRegistrar"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="273dp"
                android:layout_height="57dp"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/background_signup"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:text="@string/reg_strar"
                android:textAllCaps="false"
                android:textColor="#062743"
                android:textSize="18sp"
                android:textStyle="normal" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="25dp"
                android:indeterminateTint="#F00"
                android:visibility="gone" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
